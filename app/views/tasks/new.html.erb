<h1>Create a new task</h1>

<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'text'%>
    <%= f.text_field :title, class: 'input' %>
  </div>
  <div class="form-group">
    <%= f.label :details, class: 'text' %>
    <%= f.text_field :details, class: 'input' %>
   </div>
  <div class="form-group">
    <%= f.label :completed, class: 'text'%>
    <%= f.check_box :completed, class: 'form-control' %>
  </div>

  <%= f.submit "Submit", class: 'btn' %>
<% end %>

<%= link_to 'Back to all tasks', tasks_path, class: 'btn' %>
